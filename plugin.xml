<?xml version="1.0" encoding="utf-8"?>
<plugin 
    xmlns="http://www.phonegap.com/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    id="com.phonegap.plugins.video" 
    version="0.0.1">
    
    <name>VideoPlayer</name>
    <description>Enables playing HTML5 videos in Android applications</description>
    <license>Apache 2.0</license>
    <keywords>android, video, html5 video</keywords>

    <asset src="www/video.js" target="js/video.js"/>

    <platform name="android">
        
        <!-- Add to res/xml/config.xml -->
        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="VideoPlayer">
                <param name="android-package" value="com.phonegap.plugins.video.VideoPlayer"/>            
            </feature>
        </config-file>
        
        <!-- Move the java into the platform -->
        <source-file src="src/android/VideoPlayer.java" target-dir="src/com/phonegap/plugins/video" />

    </platform>
</plugin>
